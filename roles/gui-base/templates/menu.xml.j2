<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>gnome-terminal</execute>
			</action>
		</item>
		<item label="Nautilus">
			<action name="Execute">
				<execute>nautilus --no-desktop</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'menu' package to work -->
		<item label="Slock">
			<action name="Execute">
				<execute>slock</execute>
			</action>
		</item>
		<item label="Screencap">
			<action name="Execute">
				<execute>scrot -s</execute>
			</action>
		</item>
		<separator/>
		<item label="Firefox">
			<action name="Execute">
				<execute>/home/{{ ssh.user }}/bin/firefox/firefox</execute>
			</action>
		</item>
		<item label="Telegram">
			<action name="Execute">
				<execute>/home/{{ ssh.user }}/bin/telegram/Telegram</execute>
			</action>
		</item>
		<separator/>
		<item label="DBeaver">
			<action name="Execute">
				<execute>dbeaver</execute>
			</action>
		</item>
		<separator/>
        <menu id="layoutMenu" label="Screen Layout">
		<item label="2-Screen Office">
			<action name="Execute">
				<execute>/home/{{ ssh.user }}/bin/screens-2-office.sh</execute>
			</action>
		</item>
		<item label="3-Screen Office">
			<action name="Execute">
				<execute>/home/{{ ssh.user }}/bin/screens-3-office.sh</execute>
			</action>
		</item>
        </menu>
		<item label="ObConf">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
		</item>
		<item label="Nitrogen">
			<action name="Execute">
				<execute>nitrogen /home/{{ ssh.user }}/pics/background</execute>
			</action>
		</item>
		<item label="Reconfigure">
			<action name="Reconfigure"/>
		</item>
		<separator/>
		<item label="Exit">
			<action name="Exit"/>
		</item>
	</menu>
</openbox_menu>
