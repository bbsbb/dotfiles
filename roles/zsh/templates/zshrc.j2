export ZSH=/home/{{ssh.user}}/.oh-my-zsh
ZSH_THEME="agnoster"
DISABLE_AUTO_UPDATE="true"
plugins=(git lein docker encode64 git-extras sudo)

export PATH="/home/{{ssh.user}}/bin:/home/{{ssh.user}}/src/go/bin:/home/{{ssh.user}}/.local/bin:/usr/local/go/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/cabal/bin:/opt/ghc/bin:/opt/racket/bin:/opt/kotlin/kotlinc/bin"
# Golang
export GO111MODULE=on
export GOPATH=/home/{{ssh.user}}/src/go

# JS
[ -s "$HOME/.nvm/nvm.sh" ] && \. "$HOME/.nvm/nvm.sh"

source $ZSH/oh-my-zsh.sh

# Override locales at end
export LANG="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_MESSAGES="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Use GPG keys via agent for SSH.
export GPG_TTY="$(tty)"
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
gpgconf --launch gpg-agent
